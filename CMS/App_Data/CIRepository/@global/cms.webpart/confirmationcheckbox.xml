<?xml version="1.0" encoding="utf-8"?>
<cms.webpart>
  <WebPartCategoryID>
    <CodeName>Wizard</CodeName>
    <GUID>f5f00663-844b-4069-a823-4fb748c38952</GUID>
    <ObjectType>cms.webpartcategory</ObjectType>
  </WebPartCategoryID>
  <WebPartCSS>
<![CDATA[
.Error
{
  color:red;
}
]]>
  </WebPartCSS>
  <WebPartDefaultValues>
    <form />
  </WebPartDefaultValues>
  <WebPartDescription>
    <![CDATA[This web part can be placed on a wizard layout web part and the user has to check the checkbox in order to continue. It can be used for example during checkout when the user needs to agree to some terms in order to continue in the checkout.]]>
  </WebPartDescription>
  <WebPartDisplayName>Confirmation checkbox</WebPartDisplayName>
  <WebPartFileName>Layouts/Wizard/ConfirmationCheckbox.ascx</WebPartFileName>
  <WebPartGUID>7d4758f9-c41b-433c-bfac-e85ac9f8f8e7</WebPartGUID>
  <WebPartIconClass>icon-w-confirmation-checkbox</WebPartIconClass>
  <WebPartName>ConfirmationCheckbox</WebPartName>
  <WebPartProperties>
    <form version="2">
      <field column="AgreementText" columntype="longtext" guid="2596f074-6363-46eb-9a0b-c27f155f1715" publicfield="false" resolvedefaultvalue="False" visible="true">
        <properties>
          <defaultvalue>I agree to the terms and conditions</defaultvalue>
          <fieldcaption>Agreement text</fieldcaption>
          <fielddescription>
            <![CDATA[The text, which will be displayed together with the checkbox. You can also enter a link to some detailed agreements text.]]>
          </fielddescription>
        </properties>
        <settings>
          <Autoresize_Hashtable>True</Autoresize_Hashtable>
          <controlname>htmlareacontrol</controlname>
          <Dialogs_Content_Hide>False</Dialogs_Content_Hide>
          <HeightUnitType>PX</HeightUnitType>
          <MediaDialogConfiguration>True</MediaDialogConfiguration>
          <ShowAddStampButton>False</ShowAddStampButton>
          <WidthUnitType>PX</WidthUnitType>
        </settings>
      </field>
      <field allowempty="true" column="AgreementDefaultState" columntype="boolean" guid="fa5eea82-bff0-4e0f-9415-7423ae2f6f5a" publicfield="false" visible="true">
        <properties>
          <defaultvalue>false</defaultvalue>
          <fieldcaption>Agreement default state</fieldcaption>
          <fielddescription>
            <![CDATA[The default state of the checkbox when the user accesses the page.]]>
          </fielddescription>
        </properties>
        <settings>
          <controlname>checkboxcontrol</controlname>
        </settings>
      </field>
      <field column="ErrorMessage" columnsize="500" columntype="text" guid="1fb71494-7532-4843-9dc4-2c528efc3c43" publicfield="false" visible="true">
        <properties>
          <defaultvalue ismacro="true">{$confirmationcheckbox.acceptconditionserror$}</defaultvalue>
          <fieldcaption>Error message</fieldcaption>
          <fielddescription>
            <![CDATA[The error message, which will be displayed, if the user tries to continue without checking of the checkbox.]]>
          </fielddescription>
        </properties>
        <settings>
          <AutoCompleteEnableCaching>False</AutoCompleteEnableCaching>
          <AutoCompleteFirstRowSelected>False</AutoCompleteFirstRowSelected>
          <AutoCompleteShowOnlyCurrentWordInCompletionListItem>False</AutoCompleteShowOnlyCurrentWordInCompletionListItem>
          <controlname>textboxcontrol</controlname>
          <FilterMode>False</FilterMode>
          <Trim>False</Trim>
        </settings>
      </field>
    </form>
  </WebPartProperties>
  <WebPartSkipInsertProperties>True</WebPartSkipInsertProperties>
  <WebPartType>0</WebPartType>
</cms.webpart>