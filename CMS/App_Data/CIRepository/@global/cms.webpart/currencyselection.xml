<?xml version="1.0" encoding="utf-8"?>
<cms.webpart>
  <WebPartCategoryID>
    <CodeName>Checkout</CodeName>
    <GUID>5e13805d-aaaa-4bc8-b22c-a4474618e315</GUID>
    <ObjectType>cms.webpartcategory</ObjectType>
  </WebPartCategoryID>
  <WebPartDescription>
    <![CDATA[Allows users to select a currency that E-commerce web parts use for displaying prices. Place the web part either on a checkout process page or anywhere on your website, e.g., on your master page header. Note that if there is only one valid currency in your store, the Currency selection is automatically hidden. The web part only offers currencies with valid exchange rate.]]>
  </WebPartDescription>
  <WebPartDisplayName>Currency selection</WebPartDisplayName>
  <WebPartFileName>
    <![CDATA[Ecommerce/Checkout/Selectors/CurrencySelection.ascx]]>
  </WebPartFileName>
  <WebPartGUID>2166181d-ea9b-4394-b40f-230ac973317b</WebPartGUID>
  <WebPartIconClass>icon-w-currency-selection</WebPartIconClass>
  <WebPartName>CurrencySelection</WebPartName>
  <WebPartProperties>
    <form version="2">
      <field column="DisplayNameFormat" columnsize="50" columntype="text" guid="9ceb45ca-124a-4ed5-8a8b-3dc6844d1634" publicfield="false" visible="true">
        <properties>
          <fieldcaption>Display format</fieldcaption>
          <fielddescription>
            <![CDATA[Indicates what will be displayed as currency identifier in selector.]]>
          </fielddescription>
        </properties>
        <settings>
          <controlname>dropdownlistcontrol</controlname>
          <EditText>False</EditText>
          <Options>
<![CDATA[
currencycode;{$CurrencySelection.CurrencyCode$}
currencyname;{$CurrencySelection.CurrencyName$}
]]>
          </Options>
          <SortItems>False</SortItems>
        </settings>
      </field>
      <field column="ReloadPage" columntype="boolean" guid="ef54ad9a-8826-40cb-9b7c-2722d6c7ac26" publicfield="false" visible="true">
        <properties>
          <defaultvalue>False</defaultvalue>
          <fieldcaption>Update whole page</fieldcaption>
          <fielddescription>
            <![CDATA[Enable this property if you want the Currency selection to update all web parts that display prices on one page. If you leave the property unchecked, selecting a different currency updates only the Shopping cart and Shopping cart preview.]]>
          </fielddescription>
        </properties>
        <settings>
          <controlname>checkboxcontrol</controlname>
        </settings>
      </field>
    </form>
  </WebPartProperties>
  <WebPartResourceID>
    <CodeName>CMS.Ecommerce</CodeName>
    <GUID>684e021b-8b56-4cbf-8fd5-b7a791fd2dbc</GUID>
    <ObjectType>cms.resource</ObjectType>
  </WebPartResourceID>
  <WebPartSkipInsertProperties>True</WebPartSkipInsertProperties>
  <WebPartType>0</WebPartType>
</cms.webpart>