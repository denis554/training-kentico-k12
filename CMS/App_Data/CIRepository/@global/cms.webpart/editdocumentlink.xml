<?xml version="1.0" encoding="utf-8"?>
<cms.webpart>
  <WebPartCategoryID>
    <CodeName>General</CodeName>
    <GUID>c4dcc9a6-220e-4efe-b264-288b53d08da6</GUID>
    <ObjectType>cms.webpartcategory</ObjectType>
  </WebPartCategoryID>
  <WebPartDescription>
    <![CDATA[Displays a link that opens the current page for editing (in the Pages application or in on-site editing mode). You can configure the web part to display the link only for users with permissions to edit the page.]]>
  </WebPartDescription>
  <WebPartDisplayName>Edit page link</WebPartDisplayName>
  <WebPartFileName>General/EditDocumentLink.ascx</WebPartFileName>
  <WebPartGUID>4f72f404-67ba-4f9d-a8b5-06d803c2ee96</WebPartGUID>
  <WebPartIconClass>icon-w-edit-document-link</WebPartIconClass>
  <WebPartName>EditDocumentLink</WebPartName>
  <WebPartProperties>
    <form version="2">
      <category name="Properties">
        <properties>
          <visible>True</visible>
        </properties>
      </category>
      <field allowempty="true" column="PreferOnSiteEdit" columntype="boolean" guid="56dbc63f-ac49-4884-be70-9cd493a13835" publicfield="false" visibility="none" visible="true">
        <properties>
          <defaultvalue>true</defaultvalue>
          <fieldcaption>Prefer On-site editing</fieldcaption>
          <fielddescription>
            <![CDATA[If checked, the edit link opens the current page in On-site editing mode instead of redirecting to CMS administration. On-site editing also needs to be allowed through the 'Enable On-site editing' setting in Settings -> Content -> Content management.]]>
          </fielddescription>
        </properties>
        <settings>
          <controlname>checkboxcontrol</controlname>
        </settings>
      </field>
      <field column="LinkText" columntype="longtext" guid="903a664e-c1ba-4f70-aa5a-35625979c0f0" publicfield="false" spellcheck="false" visibility="none" visible="true">
        <properties>
          <fieldcaption>Link text</fieldcaption>
          <fielddescription>
            <![CDATA[Sets the text of the displayed link. If the 'Image URL' property is set, the link text sets the image's tooltip.]]>
          </fielddescription>
        </properties>
        <settings>
          <controlname>largetextarea</controlname>
        </settings>
      </field>
      <field allowempty="true" column="ImageURL" columnsize="500" columntype="text" guid="0721d30f-0742-47f8-b8ed-5b151da35f2a" publicfield="false" visibility="none" visible="true">
        <properties>
          <fieldcaption>Image URL</fieldcaption>
          <fielddescription>URL to the image displayed instead of a text link.</fielddescription>
        </properties>
        <settings>
          <controlname>columns</controlname>
        </settings>
      </field>
      <field allowempty="true" column="ShowOnlyWhenAuthorized" columntype="boolean" guid="441f08e4-6840-43da-ac6a-d34f6f30e595" publicfield="false" resolvedefaultvalue="False" spellcheck="false" visibility="none" visible="true">
        <properties>
          <defaultvalue>true</defaultvalue>
          <fieldcaption>Show only when authorized</fieldcaption>
          <fielddescription>
            <![CDATA[If checked, the edit link is only visible for users who are designated as editors and have permissions to edit the current page.]]>
          </fielddescription>
        </properties>
        <settings>
          <controlname>CheckBoxControl</controlname>
        </settings>
      </field>
    </form>
  </WebPartProperties>
  <WebPartSkipInsertProperties>False</WebPartSkipInsertProperties>
  <WebPartType>0</WebPartType>
</cms.webpart>