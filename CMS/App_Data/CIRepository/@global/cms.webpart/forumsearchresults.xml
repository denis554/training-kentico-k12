<?xml version="1.0" encoding="utf-8"?>
<cms.webpart>
  <WebPartCategoryID>
    <CodeName>ForumsSearch</CodeName>
    <GUID>7e5421b5-0b0a-42e4-b800-373283b7d722</GUID>
    <ObjectType>cms.webpartcategory</ObjectType>
  </WebPartCategoryID>
  <WebPartDescription>
    <![CDATA[Displays the results of search requests entered into Forum search box or Forum search - advanced dialog web parts.]]>
  </WebPartDescription>
  <WebPartDisplayName>Forum search results</WebPartDisplayName>
  <WebPartDocumentation>
<![CDATA[
<p>
 The search expression is passed to the web part through the SearchForum URL parameter - e.g.: .<span style="font-family: Courier New">../forums.aspx?SearchForum=help</span>. The forums are automatically hidden on the given page&nbsp;if this parameter is present in the URL.</p>

]]>
  </WebPartDocumentation>
  <WebPartFileName>Forums/Search/ForumSearchResults.ascx</WebPartFileName>
  <WebPartGUID>8e8c505c-dbe5-4db7-9827-ff1add8ea23a</WebPartGUID>
  <WebPartIconClass>
<![CDATA[
icon-w-forum-search-advanced-dialog

]]>
  </WebPartIconClass>
  <WebPartName>ForumSearchResults</WebPartName>
  <WebPartProperties>
    <form version="2">
      <category name="Settings">
        <properties>
          <visible>True</visible>
        </properties>
      </category>
      <field column="ForumViewMode" columnsize="200" columntype="text" guid="41a74ce9-b4e9-48d3-befe-1af56bbb3f2c" publicfield="false" reftype="Required" resolvedefaultvalue="False" spellcheck="false" visibility="none" visible="true">
        <properties>
          <fieldcaption>Forum layout</fieldcaption>
          <fielddescription>Sets the forum layout.</fielddescription>
        </properties>
        <settings>
          <controlname>ForumLayoutSelector</controlname>
        </settings>
      </field>
      <field allowempty="true" column="Groups" columnsize="400" columntype="text" guid="7689ffae-42f2-471e-8e18-be61944c0a49" publicfield="false" visibility="none" visible="true">
        <properties>
          <fieldcaption>Groups</fieldcaption>
          <fielddescription>
            <![CDATA[Selects the forum groups that should be included in the search.]]>
          </fielddescription>
        </properties>
        <settings>
          <controlname>groupsselector</controlname>
        </settings>
      </field>
      <field allowempty="true" column="NoResultsText" columnsize="100" columntype="text" guid="61706b37-383a-4af7-9b47-2539307d0e57" publicfield="false" visibility="none" visible="true">
        <properties>
          <defaultvalue>There are no posts matching search criteria.</defaultvalue>
          <fieldcaption>No results text</fieldcaption>
          <fielddescription>{$documentation.webpartproperties.noresultstext$}</fielddescription>
        </properties>
        <settings>
          <AutoCompleteEnableCaching>False</AutoCompleteEnableCaching>
          <AutoCompleteFirstRowSelected>False</AutoCompleteFirstRowSelected>
          <AutoCompleteShowOnlyCurrentWordInCompletionListItem>False</AutoCompleteShowOnlyCurrentWordInCompletionListItem>
          <controlname>textboxcontrol</controlname>
          <FilterMode>False</FilterMode>
          <Trim>False</Trim>
        </settings>
      </field>
      <category name="Extended properties">
        <properties>
          <visible>True</visible>
        </properties>
      </category>
      <field allowempty="true" column="EnableAvatars" columntype="boolean" guid="def645f2-5e69-4957-97c2-5c9ca037b6b3" publicfield="false" visibility="none" visible="true">
        <properties>
          <defaultvalue>true</defaultvalue>
          <fieldcaption>Enable avatars</fieldcaption>
          <fielddescription>
            <![CDATA[Indicates if the avatars of forum post authors should be displayed in the search results.]]>
          </fielddescription>
        </properties>
        <settings>
          <controlname>checkboxcontrol</controlname>
        </settings>
      </field>
      <field allowempty="true" column="AvatarMaxSideSize" columntype="integer" guid="8514c30c-53a4-42c9-a42d-6380ba6c96c5" publicfield="false" visible="true">
        <properties>
          <defaultvalue>80</defaultvalue>
          <fieldcaption>Avatar max side size</fieldcaption>
          <fielddescription>
            <![CDATA[{$documentation.webpartproperties.avatarmaxsidesize$}]]>
          </fielddescription>
        </properties>
        <settings>
          <controlname>textboxcontrol</controlname>
        </settings>
      </field>
      <field allowempty="true" column="DisplayBadgeInfo" columntype="boolean" guid="9fc72f6e-cd6f-407d-916c-14cb4596f180" publicfield="false" visibility="none" visible="true">
        <properties>
          <defaultvalue>true</defaultvalue>
          <fieldcaption>Display badge info</fieldcaption>
          <fielddescription>
            <![CDATA[Indicates whether badge information should be displayed for post authors in the forum search results.]]>
          </fielddescription>
        </properties>
        <settings>
          <controlname>checkboxcontrol</controlname>
        </settings>
      </field>
      <field allowempty="true" column="RedirectToUserProfile" columntype="boolean" guid="d5f3ac3d-954a-4250-9661-61dc4997fb03" publicfield="false" visibility="none" visible="true">
        <properties>
          <defaultvalue>true</defaultvalue>
          <fieldcaption>Redirect to user profile</fieldcaption>
          <fielddescription>
            <![CDATA[Indicates whether the usernames of forum post authors displayed in search results should serve as links to the given user's profile page. This requires the Settings -> Community -> Member profile path setting to be configured properly.]]>
          </fielddescription>
        </properties>
        <settings>
          <controlname>checkboxcontrol</controlname>
        </settings>
      </field>
    </form>
  </WebPartProperties>
  <WebPartResourceID>
    <CodeName>CMS.Forums</CodeName>
    <GUID>16e96e6c-f16f-49dc-a640-2357418668b8</GUID>
    <ObjectType>cms.resource</ObjectType>
  </WebPartResourceID>
  <WebPartSkipInsertProperties>False</WebPartSkipInsertProperties>
  <WebPartType>0</WebPartType>
</cms.webpart>