          <fieldcaption>Information text</fieldcaption>
          <fielddescription>
            <![CDATA[Text to be displayed to user when subscription confirmation web part is shown.]]>
          </fielddescription>
        </properties>
        <settings>
          <controlname>largetextarea</controlname>
        </settings>
      </field>
