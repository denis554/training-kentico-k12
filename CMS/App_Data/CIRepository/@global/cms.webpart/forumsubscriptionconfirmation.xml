    <form version="2">
      <category name="Confirmation">
        <properties>
          <visible>True</visible>
        </properties>
      </category>
      <field allowempty="true" column="ConfirmationInfoText" columntype="longtext" guid="185243d8-c757-406c-b494-a73ac1034a2f" publicfield="false" visibility="none" visible="true">
