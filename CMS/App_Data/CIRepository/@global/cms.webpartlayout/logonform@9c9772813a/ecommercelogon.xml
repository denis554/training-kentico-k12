    <CodeName>logonform</CodeName>
    <GUID>39f8a4c7-2a88-4d9e-8c62-2a453fba5cd0</GUID>
    <ObjectType>cms.webpart</ObjectType>
  </WebPartLayoutWebPartID>
</cms.webpartlayout>