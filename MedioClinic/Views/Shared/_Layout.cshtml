@using System.Threading
@using System.Web.Optimization

@model MedioClinic.Models.PageViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0" />
    <title>@Model.Metadata.Title | @Model.Metadata.CompanyName</title>
    <link rel="shortcut icon" type="image/png" href="~/Content/images/Logo/favicon.png" />

    <!-- CSS  -->
    @Styles.Render("https://fonts.googleapis.com/icon?family=Material+Icons")
    @Styles.Render("https://use.fontawesome.com/releases/v5.1.0/css/all.css")
    @Styles.Render("~/Content/css/materialize.min.css")
    @Styles.Render("~/Content/css/style.css")

</head>
<body>

    <nav class="white" role="navigation">
        <div class="nav-wrapper container">
            <a id="logo-container" href="@Url.Action("Index", "Home")" class="brand-logo">
                <img class="kn-logo" src="~/Content/images/Logo/Logoic.png">
                <span>@Model.Metadata.CompanyName</span>
            </a>
            <!-- Languages structure -->
            @if (Model.Cultures != null)
            {
                <ul id="langs" class="dropdown-content">
                    @foreach (var culture in Model.Cultures)
                    {
                        <li>
                            <a href="@Url.Action(
                                         ViewContext.RouteData.Values["action"]?.ToString(),
                                         ViewContext.RouteData.Values["controller"]?.ToString(),
                                         new { culture = culture.CultureCode}
                                         )">@culture.CultureShortName</a>
                        </li>
                    }
                </ul>
            }
            <ul class="right hide-on-med-and-down">
                @foreach (var menuItem in Model.MenuItems)
                {
                    if (ViewContext.RouteData.Values["controller"]?.ToString().Equals(menuItem.Controller, StringComparison.OrdinalIgnoreCase) ?? false)
                    {
                        <li class="btn-flat kn-current">
                            <a href="@Url.Action(menuItem.Action, menuItem.Controller)">@menuItem.Caption</a>
                        </li>
                    }
                    else
                    {
                        <li class="btn-flat">
                            <a href="@Url.Action(menuItem.Action, menuItem.Controller)">@menuItem.Caption</a>
                        </li>
                    }
                }

                <li>
                    <a class="dropdown-trigger" href="#" data-target="langs">
                        @Thread.CurrentThread.CurrentCulture.TwoLetterISOLanguageName
                        <i class="fas fa-globe-africa"></i>
                    </a>
                </li>
            </ul>
        </div>
        <ul id="nav-mobile" class="sidenav">
            @foreach (var menuItem in Model.MenuItems)
            {
                if (ViewContext.RouteData.Values["controller"]?.ToString().Equals(menuItem.Controller, StringComparison.OrdinalIgnoreCase) ?? false)
                {
                    <li>
                        <a href="@Url.Action(menuItem.Action, menuItem.Controller)">@menuItem.Caption</a>
                    </li>
                }
                else
                {
                    <li>
                        <a href="@Url.Action(menuItem.Action, menuItem.Controller)">@menuItem.Caption</a>
                    </li>
                }
            }
        </ul>
        <a href="#" data-target="nav-mobile" class="sidenav-trigger">
            <i class="material-icons">menu</i>
        </a>
    </nav>

    @RenderBody();

    <footer class="page-footer blue-grey darken-4">
        <div class="container">
            <div class="row">
                <div class="col l4 s12">
                    @if (Model.Footer != null)
                    {
                        <h5 class="white-text">Contact</h5>
                        <div class="grey-text text-lighten-4">
                            <p class="kn-smaller kn-address">
                                <address>
                                    <strong>@Model.Footer.CompanyName</strong>
                                    <br> @Model.Footer.PhoneNumber
                                    <br> @Model.Footer.Email
                                    <br> @Model.Footer.FullAddress
                                </address>
                            </p>
                        </div>
                    }
                </div>
                <div class="col l4 s12">
                    <h5 class="white-text">Follow Us</h5>
                    <div class="kn-social">
                        <a href="http://www.facebook.com/KenticoCMS" title="Follow us on Facebook">
                            <img alt="" src="~/Content/images/facebook.png">
                        </a>
                        <a href="https://twitter.com/Kentico" title="Follow us on Twitter">
                            <img alt="" src="~/Content/images/twitter.png">
                        </a>
                    </div>
                </div>
                <div class="col l4 s12">
                    <h5 class="white-text">Navigation</h5>
                    <ul class="kn-smaller">
                        <li>
                            <a class="white-text" href="@Url.Action("Index", "Doctors")">Our doctors</a>
                        </li>
                        <li>
                            <a class="white-text" href="@Url.Action("Index", "Contact")">Contact Us</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="footer-copyright white">
            <div class="container">
                <div class="row">
                    <div class="col s6">
                        <div class="blue-grey-text text-darken-2">
                            Built with
                            <a href="http://materializecss.com">Materialize</a> for the MVC Developer training. Kentico, @DateTime.Now.Year.
                        </div>
                    </div>
                    <div class="col s1 offset-s5">
                        <div class="blue-grey-text text-darken-2">
                            <a href="@Url.Action("Index", "Home")" rel="nofollow">404</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    @Scripts.Render("https://code.jquery.com/jquery-2.1.1.min.js")
    @Scripts.Render("~/Scripts/materialize.min.js")
    @Scripts.Render("~/Scripts/main.js")


    <!-- Additional (view specific) scripts-->
    @RenderSection("scripts", false)


</body>
</html>